{
  "$schema": "https://raw.githubusercontent.com/nicedoc/tauri/dev/crates/tauri-config-schema/schema.json",
  "productName": "Shortlist",
  "version": "0.7.2",
  "identifier": "com.shortlist.app",
  "build": {
    "beforeDevCommand": "cd frontend && npm run dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "cd frontend && npm run build",
    "frontendDist": "../frontend/dist"
  },
  "app": {
    "security": {
      "csp": "default-src 'self'; connect-src 'self' http://localhost:5000; style-src 'self' 'unsafe-inline'"
    },
    "windows": [
      {
        "title": "Shortlist",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600
      }
    ]
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/JBoggsy/shortlist/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDhBMDU1NEQ4QjA5RjAxOTUKUldTVkFaK3cyRlFGaXVGS2VOUnp3cnVRUy9DY2t4VG5HVm9SOHhUZFdqSTI0YjBBUHZQbjFMa3UK"
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/flask-backend"
    ]
  }
}
